
@{
    ViewBag.Title = "RegisterEmployer";
}
<br>
<h3 id="registerText">Här registrerar du som är arbetsgivare dig</h3>

<form>
    <fieldset>
        <legend>Ange din epost (detta kommer att bli användarnamnet) och välj ett säkert lösenord</legend>
        <div class="form-group row">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="företag@företag.se" required>

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Lösenord</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="*******" required>
        </div>
    </fieldset>
</form>
<a href='@Url.Action("", "")'>
    <input type='button' id="btnRegisterEmployer" class="btn btn-primary btn-lg" value='Registrera' />
</a>