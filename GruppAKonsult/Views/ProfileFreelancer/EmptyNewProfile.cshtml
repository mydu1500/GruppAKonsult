@model GruppAKonsult.Models.Freelancer
@model  
@{
    ViewBag.Title = "EmptyNewProfile";
}

<br>
<br>
<h1>Profil</h1><br>
<a href='@Url.Action("FreelancerCV", "ProfileFreelancer")'>
    <input id="EditBtn" type='button' class="btn btn-primary btn-lg" value='Skapa CV' />
</a>
<br>
<br>

<div class="card border-primary" style="max-width: 100rem;">
    <div class="row">
        <div class="col-md-5">
            <div class="card-header">Kontaktuppgifter</div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <label class="col-form-label" for="inputDefault">Namn</label>
                @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control", placeholder = "Förnamn" } })
                @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                <label class="col-form-label" for="inputDefault">Epost</label>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                <label class="col-form-label" for="inputDefault">Telefonnummer</label>
                @Html.EditorFor(model => model.Phonenumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefonnummer" } })
                @Html.ValidationMessageFor(model => model.Phonenumber, "", new { @class = "text-danger" })
                <label class="col-form-label" for="inputDefault">Födelsedatum</label>
                @Html.EditorFor(model => model.Birthdate, new { htmlAttributes = new { @class = "form-control", placeholder = "Födelsedatum" } })
                @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger" })
                <label class="col-form-label" for="inputDefault">Adress</label>
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Adress" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                <label class="col-form-label" for="inputDefault">Stad</label>

                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", placeholder = "Stad" } })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
            </div>

            <div class="card-header">Allmänt</div>
            <div class="card-body">
                <div class="form-group">
                    <label>Körkort: </label>
                   

                </div>
                <div class="form-group">
                    <label for="exampleTextarea">Berätta lite om dig själv</label>
                    <textarea class="form-control" id="exampleTextarea" rows="5" disabled></textarea>
                </div><br>
            </div>
        </div>



        <div class="col-md-7">
            <div class="card-header">Utbildning och arbetslivserfarenhet</div>
            <div class="card-body">
                <label for="exampleTextarea">Utbildning (skolans namn, datum, ämne, examen)</label>
                <textarea class="form-control" id="educationTextarea" cols="5" rows="4" disabled></textarea>
                <label for="exampleTextarea">Arbetsliv (befattning, datum, arbetsuppgifter)</label>
                <textarea class="form-control" id="workTextarea" cols="3" rows="4" disabled></textarea><br>

                <div class="form-group">
                    <div class="card-header">Språk</div>
                </div><br><br>

                <div class="card-header">Yrke och kunskaper</div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="Profession">Kompetenser</label>
                        <select multiple="" class="form-control" id="Profession" disabled></select>
                    </div>

                    <div class="form-group">
                        <label for="Skills">Kunskaper</label>
                        <select multiple="" class="form-control" id="Skills" disabled></select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group mb-2">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="inputFile" disabled>
                            <label class="custom-file-label" for="inputFile">Välj fil</label>
                        </div>
                        <div class="input-group-append">
                            <span class="input-group-text" id="UploadImage" disabled>Ladda upp</span>
                        </div>
                    </div>
                </div><br>
            </div>
        </div>

    </div>
</div>

