
@{
    ViewBag.Title = "EmployerLogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<div class="jumbotron">
    <div class="row">
        <h2 id="LogInText">Logga in som arbetsgivare</h2><br>
        <br><br>
        <div id="LogInPage" class="col-md-6">
            <form>
                <fieldset>
                    <legend>Ange dina användaruppgifter</legend>
                    <div class="form-group row">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="exempel@exempel.se" required>

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Lösenord</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="*******" required>
                    </div>
                </fieldset>
            </form>
            <a href='@Url.Action("EmployerView", "Employer")'>
                <input id="LogInBtn" type='button' class="btn btn-primary btn-lg" value='Logga in' />
            </a>
        </div>
    </div>
</div>

